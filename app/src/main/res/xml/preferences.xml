<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="@string/get_notified"
        android:title="@string/get_notified_title"
        android:summary="@string/get_notified_summary"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="@string/enable_update"
        android:title="@string/enable_update_title"
        android:summary="@string/enable_update_summary"
        android:defaultValue="true" />

    <ListPreference
        android:key="@string/periodicity"
        android:title="@string/periodicity_title"
        android:defaultValue="7"
        android:entries="@array/list"
        android:entryValues="@array/list_values" />

</PreferenceScreen>